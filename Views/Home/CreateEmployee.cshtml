
@{
}
@model Student_Employment 
<h2 class="text-center my-3">Create Employee</h2>
<form asp-controller="Home" asp-action="CreateEmployee" method="post">
    <h4 class="my-3">Basic Data</h4>
    <div style="display:grid; grid-template-columns: .5fr 1fr .5fr 1fr; grid-template-rows: auto; grid-row-gap: 1rem; grid-column-gap: .5rem;">
        <span>BYUID</span>
        <input class="form-control" type="number" asp-for="Student.BYUID" />
        <span>NetID</span>
        <input class="form-control" type="text" asp-for="Student.NetID" />
        <span>First Name</span>
        <input class="form-control" type="text" asp-for="Student.FirstName" />
        <span>Last Name</span>
        <input class="form-control" type="text" asp-for="Student.LastName" />
        <span>International Student?</span>
        <select class="form-control" asp-for="Student.International">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <span>Gender</span>
        <select class="form-control" asp-for="Student.Gender">
            <option value="Female">Female</option>
            <option value="Male">Male</option>
            <option value="Non-Binary">Non-Binary</option>
        </select>
        <span>Email</span>
        <input type="email" class="form-control" asp-for="Student.Email" />
        <span>Phone</span>
        <input type="tel" class="form-control" asp-for="Student.Phone" />
        <!--<span>Name Change?</span>
        <input type="checkbox" class="form-check"/>-->
        <span>BYU Name (if different)</span>
        <input type="text" class="form-control" asp-for="Student.BYUName" />
    </div>
    <div class="mt-3">Student Notes</div>
<textarea class="form-control mb-3" asp-for="Student.Notes"></textarea>
    <h4 class="my-3 mt-5">Employment Data</h4>
    <div style="display:grid; grid-template-columns: .5fr 1fr .5fr 1fr; grid-template-rows: auto; grid-row-gap: 1rem; grid-column-gap: 1rem;">
        <span>Expected Hours</span>
        <input class="form-control" type="number" asp-for="ExpectedHours" />
        <span>Semester and Year</span>
        <select class="form-control" asp-for="SemesterYearID">
            @foreach (var s in ViewBag.SemesterYears)
            {
                <option value="@s.SemesterYearID">@s.SemesterName @s.Year</option>
            }
        </select>
        <span>Position</span>
        <select class="form-control" asp-for="PositionID">
            @foreach (var p in ViewBag.Positions)
            {
                <option value="@p.PositionID">@p.PositionName</option>
            }
        </select>
        <span>Course</span>
        <select class="form-control" asp-for="CourseID">
            @foreach (var c in ViewBag.Courses)
            {
                <option value="@c.CourseID">@c.CourseCode</option>
            }
        </select>
        <span>Employee Record (BYU)</span>
        <input type="number" class="form-control" min="0" max="3" asp-for="EmplRecord" />
        <span>Supervisor</span>
        <select class="form-control" asp-for="SupervisorID">
            @foreach (var s in ViewBag.Supervisors)
            {
                <option value="@s.SupervisorID">@s.SupervisorFirstName @s.SupervisorLastName</option>
            }

        </select>
        <span>Hire Date</span>
        <input type="date" class="form-control" asp-for="HireDate" />
        <span>Pay Rate</span>
        <input type="number" class="form-control" asp-for="PayRate" step="any" />
        <!--<span>Last Pay Increase</span>
    <input type="date" class="form-control" />
    <span>Last Pay Increase Amount</span>
    <input type="number" class="form-control" />
     <span>Pay Increase Effective Date</span>
    <input type="date" class="form-control" />
     -->
        <span>Program</span>
        <select class="form-control" asp-for="ProgramID">
            @foreach (var p in ViewBag.Programs)
            {
                <option value="@p.ProgramID">@p.ProgramName</option>
            }
        </select>
        <span>Pays Grad Tuition?</span>
        <select class="form-control" asp-for="PayGradTuition">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select>
        <!--<span>Terminated?</span>
    <input type="checkbox" class="form-check" />
    <span>Termination Start Date</span>
    <input type="date" class="form-control"/>-->
        <span>Qualtrics Email Sent Date</span>
        <input type="date" class="form-control" asp-for="QualtricsSent" />
        <span>E Form Submit Date</span>
        <input type="date" class="form-control" asp-for="SubmittedEForm" />
        <span>Work Authorization Received</span>
        <input type="date" class="form-control" asp-for="AuthorizationToWorkRec" />
        <span>Work Authorization Email Date</span>
        <input type="date" class="form-control" asp-for="AuthorizationEmailSentDate" />
    </div>
    <div class="mt-3">Employment Notes</div>
<textarea class="form-control mb-3" asp-for="Notes"></textarea>

    <div class="d-flex justify-content-center mt-3">
        <button type="submit" class="btn btn-primary mr-3">Submit</button>
        <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Cancel</a>
    </div>

</form>